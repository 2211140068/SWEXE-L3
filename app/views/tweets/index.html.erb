<h1>Twitter</h1>

<%= link_to '新しいツイート', new_tweet_path %>

<% @tweets.each do |tweet| %>
  <div>
    <p><strong><%= tweet.message %></strong></p>
    <p><%= time_ago_in_words(tweet.tdate) %> ago</p>
    <%= link_to '閲覧', tweet %>
    <%= link_to '編集', edit_tweet_path(tweet) %>
    <%= link_to '削除', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>
